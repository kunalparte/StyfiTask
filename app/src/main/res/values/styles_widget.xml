<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Button.Primary"
        parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">?attr/buttonNormalColor</item>
        <item name="colorControlHighlight">?attr/buttonHighlightColor</item>
        <item name="android:textColor">?attr/buttonTextColor</item>
        <item name="background">?attr/buttonNormalColor</item>
    </style>


    <style name="EditText.TextAppearance" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">?attr/textColorET    </item>
        <!--<item name="android:textSize">?attr/textSizeEt</item>-->
        <item name="background">?attr/backGroundEt</item>
    </style>

    <style name="TextViewCustomStyleSmall">
        <item name="android:textColor">?attr/textColorET</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="TextViewCustomStyleMediumItalic">
        <item name="android:textColor">?attr/textColorET</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="TextViewCustomStyleMediumBold">
        <item name="android:textColor">?attr/textColorET</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="TextViewCustomStyleLarge">
        <item name="android:textColor">?attr/textColorET</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
</resources>